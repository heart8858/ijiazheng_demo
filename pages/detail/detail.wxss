/* pages/detail/detail.wxss */

/* banner部分 */
.banner {
    width: 100%;
    height: 300rpx;
}
.banner image {
    width: 100%;
    height: 100%;
}

/* 描述部分 */
.desC {
    padding: 10rpx;
}
.content {
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
}
.content .header {
    height: 60rpx;
    line-height: 60rpx;
    background: #ecf9ff;
    padding-left: 20rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}
.content .detail {
    padding: 20rpx 10rpx;
    font-size: 28rpx;
}

.priceC {
    margin-top: 20rpx;
    display: flex;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    font-size: 28rpx;
}
.type {
    border-right: 1rpx solid #eee;
}
.priceC .type,
.price {
    text-align: center;
    flex: 1;
}

.type .gray {
    background: #ecf9ff;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.price .gray {
    background: #ecf9ff;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.price view:last-child {
    color: red;
}
/* 取消订单部分 */
.cancelOrder {
    border: 1rpx solid #ccc;
    margin-top: 20rpx;
    border-radius: 10rpx;
}
.cancelHeader {
    background: #ecf9ff;
    display: flex;
    justify-content: space-between;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
}
.cancelHeader view:last-child {
    color: red;
}

.cancelDesc {
    padding: 20rpx 10rpx;
    font-size: 28rpx;
}

.serviceContainer {
    border: 1rpx solid #ccc;
    margin-top: 20rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
}

.serviceHeader {
    display: flex;
    background: #ecf9ff;
    border-radius: 10rpx;
    padding: 5rpx 0;
}
.serviceHeader view {
    flex: 1;
    text-align: center;
}

.serviceItem {
    display: flex;
    padding: 5rpx 0;
    border-bottom: 1rpx solid #eee;
    align-items: center;
}
.serviceItem:last-child {
    border-bottom: 0;
}

.serviceItem view {
    flex: 1;
    text-align: center;
}

.serviceItem view:nth-child(n+1) {
    border-right: 1rpx solid #eee;
}

.serviceItem view:last-child {
    border-right: 0;
}

/* 温馨提示部分 */
.van-notice-bar {
    border-radius: 10rpx;
    margin-top: 10rpx;
}

/* 服务承诺部分 */
.sPromise {
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    margin-top: 10rpx;
}
.sPromise .promiseHeader {
    background: #ecf9ff;
    border-radius: 10rpx;
    font-size: 30rpx;
    padding: 5rpx 10rpx;
}
.sPromise .promiseItem {
    font-size: 28rpx;
    display: flex;
    padding: 10rpx 0;
}

.promiseItem .sDesc .sContent {
    font-size: 24rpx;
}

.promiseItem:nth-child(n+1) {
    border-bottom: 1rpx solid #ccc;
}
.promiseItem:last-child {
    border-bottom: 0;
}
.van-icon {
    padding: 0 10rpx;
}

/* 注意事项部分 */
.notice {
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    margin-top: 10rpx;
}

.notice .noticeHeader {
    background: #ecf9ff;
    border-radius: 10rpx;
    font-size: 30rpx;
    padding: 5rpx 10rpx;
}

.notice .noticeContent {
    padding: 5rpx 10rpx;
    font-size: 26rpx;
}





